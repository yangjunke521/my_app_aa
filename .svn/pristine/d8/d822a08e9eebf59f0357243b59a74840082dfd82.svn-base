      ylphTit:0,//用量排行榜
      ylphbList:['电表','水表','燃气表'],//用量排行榜
      ylphb_act:0,//用量排行榜
      ylpdld : 0,//用于用户表头信息判断
      ylphbData:[//用量排行榜-排名数据
        {
          ph:1,
          name:'田园古香',
          value:1900
        },
         {
          ph:2,
          name:'大宋官窑',
          value:1800
